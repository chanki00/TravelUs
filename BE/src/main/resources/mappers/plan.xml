<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.DB_PASSWORD_REDACTED.trip.repository.PlanRepository">
	<insert id="insert" parameterType="Tripplan" useGeneratedKeys="true" keyProperty="id">
		INSERT INTO tripplans (destination, duration, members, transport, user_id, title, description, image )
		VALUES (#{destination}, #{duration}, #{members}, #{transport}, #{userId}, #{title}, #{description}, #{image})
	</insert>
	
	<insert id="insertDay">
    INSERT INTO TripPlanDays (plan_id, day_number)
    VALUES (#{plan_id}, #{day_number})
	</insert>
	
	<insert id="insertItinerary">
    INSERT INTO tripplanplaces (day_id, attraction_id, place_order, memo)
    VALUES (#{dayId}, #{attractionId}, #{placeOrder}, #{memo})
	</insert>
	
	<select id="selectTripplanById" parameterType="int" resultMap="TripplanResultMap">
	  SELECT * FROM TripPlans WHERE id = #{planId}
	</select>
	
	<select id="getTripplanByUserId" parameterType="int" resultMap="TripplanResultMap">
	  SELECT * FROM TripPlans WHERE user_id = #{userId}
	</select>
	
	<select id="getPlanDaysId" parameterType="int">
		select id from tripplandays
		where plan_id = #{planId} and day_number = #{dayNumber};
	</select>
	
	<select id="getAllSharePlan" resultMap="TripplanResultMap">
	  SELECT * FROM TripPlans WHERE is_shared = true
	</select>
	
	<update id="updateShare" parameterType="int">
		UPDATE TripPlans
		SET is_shared = TRUE
		where id = #{planId};
	</update>
	
	<!-- 여행 계획 삭제 (CASCADE로 관련 데이터 자동 삭제) -->
	<delete id="deleteTripPlan" parameterType="map">
		DELETE FROM TripPlans
		WHERE id = #{planId} AND user_id = #{userId}
	</delete>

	<!-- 여행 계획 존재 여부 및 소유자 확인 -->
	<select id="checkPlanOwnership" parameterType="map" resultType="int">
		SELECT COUNT(*)
		FROM TripPlans
		WHERE id = #{planId} AND user_id = #{userId}
	</select>
	
	<resultMap id="TripplanResultMap" type="com.DB_PASSWORD_REDACTED.trip.dto.Tripplan">
		<id property="id" column="id" />
	  <result property="userId" column="user_id"/>
	  <result property="title" column="title"/>
	  <result property="description" column="description"/>
	  <result property="likes" column="likes"/>
	  <result property="shares" column="shares"/>
	  <result property="createdAt" column="created_at"/>
	  <result property="updatedAt" column="updated_at"/>
	  <result property="isShared" column="is_shared"/>
	  <result property="image" column="image"/>
	    <result property="destination" column="destination"/>
	    <result property="duration" column="duration"/>
	    <result property="members" column="members"/>
	    <result property="transport" column="transport"/>
	  </resultMap>


<resultMap id="ItineraryPlaceDtoMap" type="com.DB_PASSWORD_REDACTED.trip.dto.ItineraryPlaceResponseDto">
  <!-- Itinerary -->
  <result property="dayId" column="day_id"/>
  <result property="dayNumber" column="day_number"/>
  <result property="attractionId" column="attraction_id"/>
  <result property="placeOrder" column="place_order"/>
  <result property="memo" column="memo"/>
  
  <!-- Attraction -->
  <result property="no" column="no"/>
  <result property="contentId" column="content_id"/>
  <result property="title" column="title"/>
  <result property="contentTypeId" column="content_type_id"/>
  <result property="areaCode" column="area_code"/>
  <result property="sigunguCode" column="si_gun_gu_code"/>
  <result property="image" column="first_image1"/>
  <result property="mapLevel" column="map_level"/>
  <result property="latitude" column="latitude"/>
  <result property="longitude" column="longitude"/>
  <result property="tel" column="tel"/>
  <result property="addr" column="addr1"/>
  <result property="homepage" column="homepage"/>
  <result property="overview" column="overview"/>
</resultMap>

<select id="getItineraryByPlanId" resultMap="ItineraryPlaceDtoMap" parameterType="int">
  SELECT
    d.id AS day_id,
    d.day_number AS day_number,
    p.attraction_id AS attraction_id,
    p.place_order AS place_order,
    p.memo AS memo,
    
    a.no,
    a.content_id,
    a.title,
    a.content_type_id,
    a.area_code,
    a.si_gun_gu_code,
    a.first_image1 AS first_image1,
    a.map_level,
    a.latitude,
    a.longitude,
    a.tel,
    a.addr1,
    a.homepage,
    a.overview
  FROM TripPlanDays d
  JOIN TripPlanPlaces p ON d.id = p.day_id
  JOIN attractions a ON p.attraction_id = a.no
  WHERE d.plan_id = #{planId}
  ORDER BY d.day_number, p.place_order
</select>


</mapper>
