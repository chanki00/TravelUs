<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.DB_PASSWORD_REDACTED.trip.repository.PostRepository">
	<select id="getTotalPostCount" resultType="integer">
		SELECT COUNT(*) FROM travel_posts
	</select>
	
	<select id="getAllPosts" resultMap="tripPostMap">
	SELECT * FROM travel_posts ORDER BY created_at DESC
	</select>
	
	<select id="getPagedPosts" resultMap="tripPostMap">
		SELECT * FROM travel_posts ORDER BY created_at DESC LIMIT #{limit} OFFSET #{offset}
	</select>
	
	<resultMap type="TripPost" id="tripPostMap">
		<result property="postId" column="post_id" />
		<result property="planId" column="plan_id" />
		<result property="title" column="title" />
		<result property="author" column="author" />
		<result property="content" column="content" />
		<result property="createdAt" column="created_at" />
		<result property="views" column="views" />
	</resultMap>
	
</mapper>